@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Manbu Studio</MudText>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavLink Href="/" Icon="@Icons.Material.Outlined.Home">
            Inicio
        </MudNavLink>
        <MudNavLink Href="https://localhost:5001/docs" Target="_blank" Icon="@Icons.Material.Outlined.LiveHelp">
            Swagger
        </MudNavLink>
        <MudDivider />
        <MudNavLink Href="markets" Icon="@Icons.Material.Outlined.TableChart">
            Maerkets
        </MudNavLink>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}